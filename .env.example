# Grammy Engine Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Backend
SECRET_KEY=your-super-secret-jwt-key-min-32-chars
DATABASE_URL=postgresql://grammy:grammy_password@postgres:5432/grammy_engine

# Redis/Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ARM Optimization & Lightweight Mode
# auto = automatically detect and optimize for ARM
# true = force lightweight mode (75% memory reduction, 3x faster)
# false = disable lightweight mode
LIGHTWEIGHT_MODE=auto

# Model Configuration
# small = fastest, lowest memory (recommended for ARM)
# medium = balanced (default)
# large = highest quality, most memory
MODEL_SIZE=medium

# Model Precision (affects memory and speed)
# int8 = 75% less memory, 3x faster (auto-enabled on ARM)
# float16 = 50% less memory, 2x faster
# float32 = full precision (default on x86)
MODEL_PRECISION=float32

# Audio Processing
# Smaller buffer = less memory, slightly slower
# Larger buffer = more memory, slightly faster
AUDIO_BUFFER_SIZE=8192

# Worker Configuration
WORKER_CONCURRENCY=2
MAX_AUDIO_DURATION=300

# AWS (Optional - for S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=grammy-engine-audio

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Analytics (Optional)
POSTHOG_API_KEY=your-posthog-key
SENTRY_DSN=your-sentry-dsn

# Stripe (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Blockchain/Web3 (Optional - for NFT features)
# Leave empty to disable blockchain features
WEB3_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR-PROJECT-ID
WEB3_CHAIN_ID=137
WEB3_PRIVATE_KEY=your-private-key-here
NFT_CONTRACT_ADDRESS=your-deployed-contract-address

# Production Settings
ENVIRONMENT=development
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
